<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create New Lisitngs</h3>
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks Good.</div>
          <div class="invalid-feedback">Please enter a title!</div>
        </div>
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            type="text"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please Enter a short description!</div>
        </div>
        <div>
          <label for="image-url" class="form-label">Upload Listing image</label>
          <input type="file" name="listing[image]" class="form-control" />
        </div>
        <div class="row">
          <div class="col-md-4">
            <label for="price" class="form-label">Enter Price</label>
            <input
              type="text"
              name="listing[price]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid price!</div>
          </div>
          <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a country name!</div>
          </div>
        </div>
        <div>
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a location!</div>
        </div>
        <br />
        <button class="btn btn-dark mt-3">Add</button>
      </form>
      <br />
    </div>
  </div>
</body>
