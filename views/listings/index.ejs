<% layout("/layouts/boilerplate") %>

<body>
  <div>
    <button type="button" class="btn btn-primary" id="toggleButton">
      Show Filters
    </button>

    <!-- Filters section -->
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-ideal"></i></div>
        <p>Deals</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-plane"></i></div>
        <p>Travel</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-map-location"></i></div>
        <p>Map</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </div>
    </div>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 listing-card mt-3">
    <% for (let listing of allListing) { %>
    <a href="/listings/<%= listing.id %>" class="listing-link">
      <div class="card col">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377; <%= listing.price.toLocaleString("en-in") %>
            <i class="tax-info">&nbsp;&nbsp; +12% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
