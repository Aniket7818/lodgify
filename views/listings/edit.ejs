<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <h4>Edit Your Lisitngs</h4>
      <form
        method="post"
        action="/listings/<%=listing.id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            value="<%=listing.title%>"
            required
          />
          <div class="valid-feedback">Title Looks Good.</div>
          <div class="invalid-feedback">Please enter a title!</div>
        </div>
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            type="text"
            class="form-control"
            required
          >
<%=listing.description%></textarea
          >
          <div class="invalid-feedback">Please Enter a short description!</div>
        </div>
        <div class="mb-3">
          Original Image <br />
          <img
            src="<%=originalImageUrl%>"
            style="width: 300px; height: 250px; object-fit: cover"
          />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input type="file" name="listing[image]" class="form-control" />
          <div class="invalid-feedback">Please enter a valid image link!</div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <label for="price" class="form-label">Enter New price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%=listing.price%>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid price!</div>
          </div>
          <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%=listing.country%>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a country name!</div>
          </div>
        </div>
        <div>
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%=listing.location%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a location!</div>
        </div>
        <br />
        <button class="btn btn-dark mt-3">Save</button>
      </form>
      <br />
    </div>
  </div>
</body>
