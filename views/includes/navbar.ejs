<style>
  .btn-search {
    background-color: rgb(211, 48, 23);
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .btn-search:hover {
    background-color: rgb(211, 48, 23);
    color: white;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .inp-search {
    border-radius: 25px;
    padding: 0.5rem 4rem 0.5rem 2rem;
  }

  /* Offcanvas styles */
  .offcanvas {
    width: 200px;
    padding: 1rem;
  }

  .offcanvas-body {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }

  .offcanvas-header {
    border-bottom: 1px solid #dee2e6;
  }

  .offcanvas-title {
    font-size: 2rem;
  }

  .offcanvas {
    max-height: 30vh;
    overflow-y: auto;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-solid fa-house"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasRight"
      aria-controls="offcanvasRight"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex">
          <input
            class="form-control me-2 inp-search"
            type="search"
            placeholder="Search Destinations"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <!-- Always visible when above 780px -->
      <div class="navbar-nav ms-auto d-none d-md-flex">
        <a class="nav-link" href="/listings/new">Add Your Listing</a>
        <% if(!currUser){ %>
        <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if(currUser){ %>
        <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- Offcanvas menu -->
<div
  class="offcanvas offcanvas-end"
  tabindex="-1"
  id="offcanvasRight"
  aria-labelledby="offcanvasRightLabel"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasRightLabel">Menu</h5>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">
    <!-- Links only visible when below 780px -->
    <a class="nav-link" href="/listings/new">Add Your Listing</a>
    <% if(!currUser){ %>
    <a class="nav-link" href="/signup">Sign Up</a>
    <a class="nav-link" href="/login">Login</a>
    <% } %> <% if(currUser){ %>
    <a class="nav-link" href="/logout">Logout</a>
    <% } %>
    <a class="nav-link" href="#">Customer Support</a>
  </div>
</div>
